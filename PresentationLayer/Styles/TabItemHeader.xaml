<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TabItemHeaderStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Text" Value="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=Header}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="Margin" Value="25"/>
        <Setter Property="Grid.Row" Value="0"/>
        <Setter Property="FontFamily" Value="Fonts/GeistMono-Regular"/>
    </Style>
</ResourceDictionary>